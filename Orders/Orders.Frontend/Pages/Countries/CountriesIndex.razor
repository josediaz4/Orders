@page "/countries"

<h3>Países</h3>

<GenericList MyList="Countries"> 
    <Body>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>País</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var country in Countries)
                {
                    <tr>
                        <td>@country.Name</td>
                        <td>
                            <a class="btn btn-warning">Editar</a>
                            <button class="btn btn-danger">Borrar</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </Body>
</GenericList>



